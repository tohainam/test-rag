# Flask Configuration
FLASK_ENV=development
FLASK_APP=src.app:create_app
PORT=50059

# Database Configuration
DATABASE_URL=mysql+pymysql://root:root@localhost:3306/ltv_assistant

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_EVALUATION=evaluation
MINIO_PRESIGNED_URL_EXPIRY_HOURS=1

# Retrieval Service Configuration
RETRIEVAL_SERVICE_URL=http://localhost:50056

# Worker Configuration
RQ_QUEUE_NAME=ragas-queue
RQ_WORKER_TIMEOUT=7200  # 2 hours in seconds
RQ_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
SERVICE_NAME=ltv-ragas-evaluation

# RAGAS Configuration
RAGAS_METRICS=context_precision,context_recall,context_relevancy
